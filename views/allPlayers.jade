extends layout
block content
   if !players.length
      h2 Все още няма участници!
   else
      table.table.table-striped.table-hover.water-mark
         thead
            tr
               th Име
               th Фамилия
               th Телефон за връзка
               th Е-мейл
               th Редактиране
               th Изтриване
         tbody
            each player in players
               tr
                  td #{player.firstName}
                  td #{player.lastName}
                  td
                     if player.phoneNumber
                        | #{player.phoneNumber}
                     else
                        | Не е въведен телефон
                  td #{player.email}
                  td
                     a.btn.btn-warning.btn-xs(href="/edit/#{player._id}") Редактиране
                  td
                     a.btn.btn-danger.btn-xs(href="/delete/#{player._id}") Изтриване